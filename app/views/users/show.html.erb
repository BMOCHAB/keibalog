  <div class="contents row mypage" >
    <p class="mypage"><%= @nickname %>'s Posts</p>
    <div class ="mypagepost">
		<% @posts.each do |post| %>
		<div class="col s12 m4 mypageposts">
			<div class="icon-block" style="background-image: url(<%= post.image %>);">
				<h4 class="center"><%= post.title %></h4>
									<% if user_signed_in? && current_user.id == post.user_id %>
						<div class="more">
							<span class="liststar">★</span>
							<ul class="more_list">
								<li class="usermenu">
									<%= link_to '編集', "/posts/#{post.id}/edit", :class => "behind", method: :get %>
								</li>
								<li class=usermenu>
									<%= link_to '削除', "/posts/#{post.id}",  :class => "behind", method: :delete %>
								</li>

							</ul>
						</div>
						<% end %>
    <p class="lights"><%= post.text %></p>
			</div>
		</div>
		  <% end %>
		</div>
 

  </div>